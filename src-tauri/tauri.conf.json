{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "offline",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "ping",
            "cmd": "ping",
            "args": true
          }
        ]
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://captive.apple.com/*"]
      }
    },
    "windows": [
      {
        "title": "离线检测",
        "width": 320,
        "height": 200,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.offline.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*"]
    }
  }
}
